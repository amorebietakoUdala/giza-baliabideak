{% block title %}{{ 'app.title.department.index' | trans }}{% endblock %}

{% block body %}
	<main class="container-fluid">
        <div id="content" class="container-fluid" {{ stimulus_controller('table', 
                    { 'url': path('department_index'),
                    'exportName': 'departments',
                })}} data-table-target="content">
                {{ include('department/_list.html.twig', { 
                    'departments': departments,
                    'pageSize' : pageSize,
